int sensorPin = 2; 
int ledPin = 13;     
int sensorState = 0;

void setup() {
  pinMode(sensorPin, INPUT);
  pinMode(ledPin, OUTPUT);
  Serial.begin(9600);
}

void loop() {
  sensorState = digitalRead(sensorPin);

  if (sensorState == HIGH) {
    Serial.println("S"); 
    digitalWrite(ledPin, HIGH); 
    delay(200);         
  } else {

    Serial.println("G"); 
    digitalWrite(ledPin, LOW);
    delay(200);
  }
}
